<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>apni-library</title>
    <link rel="icon" href="/images/main-image2.png">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            color: black;
        }

       
    .navbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem;
      background: linear-gradient(to right, rgb(244, 35, 70), #918f8f);
      color: white;
      height: 70px; /* Increased height */
    }

    .navbar .brand {
      font-size: 1.5rem;
      font-weight: bold;
    }

    .navbar .menu {
      display: flex;
      align-items: center;
      gap: 1rem;
    }

    .navbar .menu a {
      text-decoration: none;
      color: white;
      font-size: 1rem;
    }

    .navbar .menu form {
      margin: 0;
    }

    .navbar .menu button {
      padding: 0.5rem 1rem;
      background: white;
      color: black;
      border: none;
      cursor: pointer;
      font-size: 1rem;
      border-radius: 4px;
    }

    .menu-btn {
      display: none;
      font-size: 1.5rem;
      background: none;
      border: none;
      color: white;
      cursor: pointer;
    }

        /* Scrollable Container */
        .container {
            width: 100%;
            height: auto;
            background-color: white;
            padding: 20px;
            border: 1px solid #ccc;
            margin-top: 20px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .container h2 {
            margin-bottom: 15px;
        }

        .section {
            padding: 20px;
            margin: 10px 0;
            border: 1px solid #000;
            transition: all 0.5s;
        }
        .section:hover {
            transform: scale(1.01);
            background-color: #ff5722;
            color: #000;
            font-weight: 700;
        }
        .section strong {
            margin-bottom: 10px;
        }
        .section a {
            font-size: 1rem;
        }

        /* Responsive Styles */
        @media (max-width: 768px) {
            .navbar .menu {
        display: none;
        flex-direction: column;
        gap: 0.5rem;
        background: linear-gradient(to right, #000, #434343);
        position: absolute;
        top: 70px; /* Align menu directly below navbar */
        right: 0;
        width: 100%;
        text-align: center;
      }

      .navbar .menu.show {
        display: flex;
      }

      .menu-btn {
        display: block;
      }
        }
    </style>
</head>
<body>

<!-- Navigation Bar -->
<nav class="navbar">
    <div class="brand">Semester: <%= subject.semesterId.name %></div>
    <button class="menu-btn" onclick="toggleMenu()">â˜°</button>
    <div class="menu">
        <a href="/home">Go Back</a>
        <form method="post" id="deleteBtn" action="/home/<%= subject._id %>/subject?_method=DELETE">
        <button id="uploadButton">delete</button>
        </form>
        <a href="/subject/<%= subject._id %>/add" id="uploadButtonn">Add Note</a>
    </div>
  </nav>

<!-- Main Page Content -->
<h1 style="text-align: center; margin-left: 10px; margin-top: 10px;">Subject: <%= subject.name %></h1>

<!-- Scrollable Container -->
<div class="container">
    <h2>Notes</h2>
    <ul>
        <% if (subject.notes && subject.notes.length > 0) { %>
            <% subject.notes.forEach(note => { %>
                <li class="section">
                    <strong><%= note.title %></strong>
                    <a href="<%= note.pdfLink %>" target="_blank">View PDF</a>
                </li>
            <% }); %>
        <% } else { %>
            <p>No notes available for this subject.</p>
        <% } %>
    </ul>
</div>

<!-- JavaScript for Responsive Menu -->
<script>
    function toggleMenu() {
      const menu = document.querySelector('.menu');
      menu.classList.toggle('show');
    }

    
        //create note button//
        document.getElementById("uploadButton").addEventListener("click", function() {
    const secretCode = "mylucky"; // Replace with your actual code
    const userInput = prompt("Enter the secret code to upload notes:");

    if (userInput === secretCode) {
        // Code matches, proceed with upload
        // Call your upload function or redirect to the upload page
        alert("Code correct! Proceeding to upload...");
    } else {
        // Incorrect code, show error
        event.preventDefault();
        alert("Incorrect code. Access denied.");
    }
});
