    <div class="container">
        <h2 class="title">Login</h2>
        <form action="/login" method="post" class="form-container">
            <div class="input-box email">
                <label for="username" class="form-label"></label><br>
                <input name="username" id="username" type="text" placeholder="enter a username" class="form-control" required>


                <!-- <input type="text"  id="email-input" required placeholder="Enter your Username" name="username"> -->

